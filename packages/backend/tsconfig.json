{
  "compilerOptions": {
    "target": "es6",
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "../../node_modules/@types",
      "./src/types"
    ],
    "moduleResolution": "node16",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "../../node_modules/react-native",
    "../../packages/frontend",
    "../../node_modules/@types/react-native"
  ]
}