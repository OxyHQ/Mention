{
  "cli": {
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "android": {
        "buildType": "apk"
      },
      "extends": "production",
      "distribution": "internal",
      "env": {
        "API_URL": "https://api.mention.earth"
      }
    },
    "production": {
      "node": "20.0.0",
      "env": {
        "API_URL": "https://api.mention.earth"
      },
      "android": {
        "buildType": "apk" //apk or app-bundle
      },
      "autoIncrement": true
    },
    "staging": {
      "extends": "production",
      "distribution": "internal"
    },
    "apk": {
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "distribution": "internal",
      "env": {
        "EXPO_PUBLIC_ENV": "production",
        "EXPO_PUBLIC_API_URL": "https://api.mention.earth"
      }
    }
  }
}